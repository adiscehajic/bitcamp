package ba.bitcamp.w06d01.exercises.interfacee.task01;

import java.util.Random;

public class Main {

	public static void main(String[] args) {
		
		Line l = new Line(10);
		
		l.drawOnConsole();
		
		Rectangle r = new Rectangle(5, 4);
		
		r.drawOnConsole();
		Random rand = new Random();
		
		Drawable[] d = new Drawable[10]; 
		for (int i = 0; i < d.length; i++) {
			if (i % 2 == 0) {
				Line line = new Line(rand.nextInt(5));
				line.drawOnConsole();
			} else {
				Rectangle rectangle = new Rectangle(rand.nextInt(5), rand.nextInt(5));
				rectangle.drawOnConsole();
			}
		}
		
		
	}
	
}
