package ba.bitcamp.w05d04.exercises.tasks;

public class Main {

	public static void main(String[] args) {

		DesktopComputer d = new DesktopComputer();
		Laptop l = new Laptop();
		PocketPC p = new PocketPC();
		Workstation w = new Workstation();

		d.setSystemName("Linux");
		d.setCapacityHDD(1000);
		d.setRam(4);
		d.setSpaceForRAM(2);
		d.setHasOpticalDrive(true);
		d.setIsOverclock(true);
		d.setPrice(1200);

		d.printTypeInfo();

		l.setSystemName("Windows");
		l.setDisplaySize(17);
		l.setHasWiFi(true);
		l.setHasNumericalKeyboard(true);
		l.setBatteryCells(2);
		l.setPrice(1500);
		l.setRam(4);
		l.setWeight(3);

		l.printTypeInfo();

		p.setSystemName("Linux");
		p.setRam(4);
		p.setPrice(700);
		p.setWeight(1);
		p.setDisplaySize(10);
		p.setHasMicroSDCardSlot(true);
		p.setHasSIMCardSlot(true);
		p.setHasTouchInterface(true);
		p.setHasWiFi(true);

		p.printTypeInfo();

	}

}
