package ba.bitcamp.w05d05.exercises;

public abstract class Animal extends LifeForm {

	/*
	 * Declaring constants of what animal eats
	 */
	public static final int CARNIVORE = 1;
	public static final int HERBIVORE = 2;

	/*
	 * Declaring properties of animal
	 */
	private int weight;
	private int eating;

	/**
	 * Constructor
	 * 
	 * @param isAlive
	 * @param weigth
	 * @param eating
	 */
	public Animal(Boolean isAlive, int weigth, int eating) {
		super(isAlive);
		this.weight = weigth;
		this.eating = eating;
	}

	/**
	 * Prints information about animal
	 */
	public String toString() {
		String s = super.toString();
		s += "Weight: " + weight + "\n";
		if (eating == 1) {
			s += "Eating: Carnivore\n";
		} else if (eating == 2) {
			s += "Eating: Herbivore\n";
		}

		return s;
	}

	/*
	 * Get and set methods
	 */
	public int getWeight() {
		return weight;
	}

	public void setWeight(int weight) {
		this.weight = weight;
	}

	public int getEating() {
		return eating;
	}

	public void setEating(int eating) {
		this.eating = eating;
	}

}
