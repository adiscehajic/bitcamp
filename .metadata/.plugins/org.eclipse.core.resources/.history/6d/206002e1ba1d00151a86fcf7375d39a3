public class Task05 {

	public static void main(String[] args) {
		System.out.println(getPower(-2, -3));
	}

	public static double getPower(int number, int exponent) {
		int product = 1;
		if (exponent > 0) {
			if (exponent == 1) {
				return number;
			}
			return number * getPower(number, exponent - 1);
		} else if (exponent < 0) {

			if (exponent == -1) {
				return number;
			}
			product *= number * getPower(number, exponent + 1);
			System.out.println(product);
			return (double) ((double) (1) / product);
		} else {
			return 1;
		}

	}
}
