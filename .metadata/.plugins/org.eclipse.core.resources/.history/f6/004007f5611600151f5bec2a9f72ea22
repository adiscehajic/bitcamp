package ba.bitcamp.w05d05.lectures.thisandsuper;

import java.util.Random;
import java.util.Scanner;

public class IgrajPogodiBroj {

	public static void main(String[] args) {
		
		Scanner in = new Scanner(System.in);
		Random rand = new Random();
		int pokusaj = 0;
		
		PogodiBroj pb = new PogodiBroj(100, 5);
		int randomBroj = rand.nextInt(pb.maxBroj);
		
		
		while(pokusaj < pb.maxBrojPokusaja){
		System.out.println("Pokusaj pogoditi broj: ");
			int broj = in.nextInt();
			
			if (broj == randomBroj) {
				System.out.println("Cestitam");
			} else {
				System.out.println("Zao mi je pokusaj ponovo.");
			}
			
			System.out.println(randomBroj);
			pokusaj++;
		}
		
		
		
		in.close();
		
		
	}
	
	
}
